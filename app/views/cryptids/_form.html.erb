<%= form_for @cryptid do |f| %>

<%= f.label  "Name:" %>
<%= f.text_field :name %><br>

<%= f.label  "Location:" %>
<%= f.text_field :location %><br>

<%= f.label  "Size:" %>
<%= f.text_field :size %><br>

<%= f.label  "Classification:" %>
<%= f.text_field :classification %><br>

<br>
<%= f.label "Or, if Already Discovered, Select Existing Cryptid:" %><br>
<%= f.collection_select :id, Cryptid.all, :id, :name, {include_blank: true} %>

<%= hidden_field(:cryptid, :observation_id, :value => @observation ? @observation.id : params[:observation_id]) %>

<br>
<br>
<%= f.submit "Add Cryptid" %>

<% end %>